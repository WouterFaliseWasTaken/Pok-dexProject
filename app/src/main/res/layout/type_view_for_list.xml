<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="typeEnum"
            type="com.example.pokdexproject.model.Type" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/typeViewForList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@{typeEnum.color}"
        app:cardCornerRadius="100dp"
        app:cardElevation="0dp"
        app:contentPaddingBottom="3dp"
        app:contentPaddingLeft="10dp"
        app:contentPaddingRight="10dp"
        app:contentPaddingTop="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginStart="3dp"
        tools:cardBackgroundColor="#0000FF">

        <TextView
            android:id="@+id/typeTextForList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{typeEnum.unCapsLock()}"
            style="@style/type_style"
            tools:text="Poison" />
    </androidx.cardview.widget.CardView>
</layout>